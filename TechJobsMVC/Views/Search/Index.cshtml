<div class="container body-content">
    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType"  id="@column.Key" value="@column.Key" checked="" >
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{//TODO #4: Loop over the search results to display all job fields.
     }

        @if (ViewBag.jobSearch != null)
        {
            @foreach (var job in ViewBag.jobSearch)
            {
                <table class="job-listing">
                    <tbody>
                        <tr>
                            <td>
                                ID: @job.Id
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Name:  @job.Name
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Employer: <a asp-controller="Search" asp-action="Results" asp-route-searchType="all" asp-route-searchTerm="@job.Employer">@job.Employer</a>                            
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Location:  <a asp-controller="Search" asp-action="Results" asp-route-searchType="all" asp-route-searchTerm="@job.Location">@job.Location</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Position:  <a asp-controller="Search" asp-action="Results" asp-route-searchType="all" asp-route-searchTerm="@job.PositionType">@job.PositionType</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Compentency: <a asp-controller="Search" asp-action="Results" asp-route-searchType="all" asp-route-searchTerm="@job.CoreCompetency">@job.CoreCompetency</a> 
                            </td>
                        </tr>
                    </tbody>
                </table>
            }
        }
    </div>

    

    

